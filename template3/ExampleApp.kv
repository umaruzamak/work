#:kivy 1.10
#:kivy 1.0

<Label>:
    color: 1,0,1,1
    font_size: 50

<Button>:
    font_size: 40
	size: 170,75
	color: 0,1,0,1

<Widgets>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        pos: 170,0
        text: "Listen"
        on_press: root.Label_Change(root.sayHi())

    Label:
        font_name: "C:\Windows\Fonts\\Tahoma.TTF"
        id: lbl
        pos: root.x, root.top - 300
        size: self.texture_size
        text: "test"

AnchorLayout:
    anchor_x: 'center'
    anchor_y: 'center'
    Button:
        height: 40
        width: 100
        size_hint: (None, None)
        text: 'Click Me'
        on_press: app.process_button_click()

<PopupBox>:
    pop_up_text: _pop_up_text
    size_hint: .5, .5
    auto_dismiss: True
    title: 'Statusdsadasd'   

    BoxLayout:
        orientation: "vertical"
        AsyncImage:
            source: '.\spinner.gif'
            anim_delay: 0.05
        Label:
            id: _pop_up_text
            text: 'asdasd'

